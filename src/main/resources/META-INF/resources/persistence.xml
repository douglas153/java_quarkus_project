<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="loja" transaction-type="RESOURCE_LOCAL">
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"></property>
        <property name="javax.persistence.jdbc.url" value="h2:mem:loja"></property>
        <property name="javax.persistence.jdbc.username" value="sa"></property>
        <property name="javax.persistence.jdbc.password" value=""></property>

        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"></property>
        <property name="hibernate.show_sql" value="true"></property>
    </persistence-unit>
</persistence>
